/*header*/    
nav{
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 170px;
    padding: 10px 10px;
    box-sizing: border-box;
    background: rgba(0, 0, 0, 0.7);
    border-bottom: 1px solid #fff;
    
}
nav .logo{
    margin-left: 0px;
    margin-top: 0px;
    margin-bottom: 0px;
    width: 150px;
    padding: 0px 0px;
    float: left;
}
nav ul{
    list-style: none;
    float: right;
    margin: 0;
    padding:  30px 0px;
    display: flex;
}
nav ul li a{
    line-height: 80px;
    margin: 0;
    color: #fff;
    padding: 10px 15px;
    text-decoration: none;
    font-size: 15px;
    font-weight: bold;
    text-transform: uppercase;
}
nav ul li a:hover{
    background: rgb(2, 85, 34);
    border-radius: 6px;
}

